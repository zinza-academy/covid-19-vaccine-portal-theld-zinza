{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "prettier",
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "semi": "off",
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "all",
          "tabWidth": 2,
          "singleQuote": true,
          "bracketSpacing": true,
          "eslintIntegration": true,
          "printWidth": 100
        }
      ]
    }
}
